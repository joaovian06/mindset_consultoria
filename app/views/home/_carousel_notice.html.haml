.container-fluid.p-0
  #carouselExampleControls.carousel.slide.carousel-fade{ 'data-ride': 'carousel' }

    %ol.carousel-indicators
      %li{ class: "active", "data-target": "#carouselExampleControls", "data-slide-to": "0" }
      %li{ "data-target": "#carouselExampleControls", "data-slide-to": "1" }
      %li{ "data-target": "#carouselExampleControls", "data-slide-to": "2" }

    .carousel-inner

      .carousel-item.active
        = image_tag "image-1", class: 'd-block w-100'
      .carousel-item
        = image_tag "image-2", class: 'd-block w-100'
      .carousel-item
        = image_tag "image-3", class: 'd-block w-100'

    %a.carousel-control-prev{ href: "#carouselExampleControls", role: 'button', 'data-slide': 'prev' }
      %span.carousel-control-prev-icon{ "aria-hiden": "true" }
      %span.sr-only Previous

    %a.carousel-control-next#carouselExampleControls{ href: "#carouselExampleControls", role: 'button', 'data-slide': 'next' }
      %span.carousel-control-next-icon{ "aria-hiden": "true" }
      %span.sr-only Next
